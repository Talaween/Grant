{
	"accesscontrol":
	[
		{
		"role":"author",
		"inherits":"guest", 
		"grant":[
					{
						"resource":"article", 
						"policies":
						[
							{
								"action" : "create",
								"records": "any",
								"fields" : "*",
								"limit" : {
									"amount": -1,
									"rule" :""
								}
							}, 
							{
								"action" : "read",
								"records": "article.authorId=user.id",
								"fields" : "*",
								"limit" : {
									"amount": -1,
									"rule" :""
								}
							},
							{
								"action" : "read",
								"records": "article.authorId!=user.id",
								"fields" : "title,authorId, body, publishedDate",
								"limit" : {
									"amount": -1,
									"rule" :""
								}
							},
							{
								"action" : "update",
								"records": "article.authorId=user.id",
								"fields" : "*",
								"limit" : {
									"amount": -1,
									"rule" :""
								}
							},
							{
								"action" : "delete",
								"records": "article.authorId=user.id",
								"fields" : "*",
								"limit" : {
									"amount": -1,
									"rule" :""
								}
							}
						]
						
					},
					{
						"resource":"comments", 
						"policies":
						[
							{
								"action" : "create",
								"records": "any",
								"fields" : "*",
								"limit" : {
									"amount": -1,
									"rule" :""
								}
							}, 
							{
								"action" : "read",
								"records": "any",
								"fields" : "*",
								"limit" : {
									"amount": -1,
									"rule" :""
								}
							},
							{
								"action" : "update",
								"records": "comment.authorId=user.id",
								"fields" : "title, body",
								"limit" : {
									"amount": -1,
									"rule" :""
								}
							},
							{
								"action" : "delete",
								"records": "comment.authorId=user.id",
								"fields" : "*",
								"limit" : {
									"amount": -1,
									"rule" :""
								}
							}
						]	
					}
				]
		}
	]
}	